<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <h2>マイページ</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <!-- 名前入力用のフィールドを追加 -->
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>

    <% if @user.provider.blank? %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(パスワードを変更しない場合は空白)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(入力必須)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

    <% end %>

      <div class="field">
        <%= profile_img(@user) if profile_img(@user) %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div>

      <div class="actions">
        <%= f.submit "更新", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <h3>アカウントの削除</h3>

    <p>アカウントを削除しますか？ <%= button_to "削除", registration_path(resource_name), class: "btn btn-danger btn-block", data: { confirm: "本当に削除しますか？" }, method: :delete %></p>

    <%= link_to "トップにもどる", root_path  %>
  </div>
</div>

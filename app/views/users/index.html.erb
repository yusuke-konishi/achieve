<div class="container">
  <h2>ユーザー</h2>
  <table class="table" id="follow-table">
    <tr>
      <th></th>
      <th>名前</th>
      <th>メッセージ</th>
      <th>フォロー</th>
    </tr>
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <tr>
          <td id="follow-img"><%= profile_img(user) %></td>
          <td><%= link_to user.name, user %></td>
          <td><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></td>
          <td><%= render partial: 'follow_form', locals: { user: user } if signed_in? %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>

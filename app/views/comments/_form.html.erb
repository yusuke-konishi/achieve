<%= form_for([blog,comment], remote: true) do |f| %>
  <%= f.error_messages! %>
  <%= f.hidden_field :blog_id %>
  <div class="field">
    <%= f.text_field :content, required: true, placeholder: "内容", class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
